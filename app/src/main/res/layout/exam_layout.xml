<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/main">
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/load_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载数据..."
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center_horizontal"/>
    </LinearLayout>
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/exam_title"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_examinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        tools:text="@string/exam_title"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#990000"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="剩余时间：9分53秒"
        android:textColor="#000"
        android:gravity="center_horizontal"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/tv_exam_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textColor="#000"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_exam_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="这个标志是何含义?"
                    android:textColor="#000"
                    android:textSize="18sp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_exam_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@mipmap/exam_img"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:id="@+id/layout_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A."
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="车道数变少"
                    android:textColor="#000"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B."
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="合流处"
                    android:textColor="#000"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C."
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="应急车道"
                    android:textColor="#000"
                    android:textSize="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D."
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="像左变道"
                    android:textColor="#000"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <CheckBox
                    android:id="@+id/cb_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:textColor="#000"
                    android:text="A"/>
                <CheckBox
                    android:id="@+id/cb_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:text="B"/>
                <CheckBox
                    android:id="@+id/cb_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:text="C"/>
                <CheckBox
                    android:id="@+id/cb_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:text="D"/>
            </LinearLayout>
            <Gallery
                android:id="@+id/gallery"
                android:spacing="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Gallery>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/exam_pre32x32"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:background="@null"
                    android:onClick="preExam"
                    android:text="上一题"/>
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/exam_next32x32"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:textColor="#000"
                    android:onClick="nextExam"
                    android:text="下一题"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/exam_commit32x32"
                    android:layout_below="@+id/btn_next"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:textColor="#000"
                    android:onClick="commitExam"
                    android:text="交卷"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
